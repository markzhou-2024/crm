{
  "name": "crm",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .js,.ts,.wxs",
    "prettier:check": "prettier \"**/*.{js,json,wxss,wxml,wxs,ts,tsx,css,less,scss,md}\" --check",
    "prettier:write": "prettier \"**/*.{js,json,wxss,wxml,wxs,ts,tsx,css,less,scss,md}\" --write",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,wxs}": [
      "eslint --fix"
    ],
    "*.{js,json,wxss,wxml,wxs,ts,tsx,css,less,scss,md}": [
      "prettier --check --ignore-unknown"
    ]
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  }
}
