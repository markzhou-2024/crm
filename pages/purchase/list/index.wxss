.purchase-list {
  padding-bottom: 160rpx;
}

.purchase-list .page-scroll {
  height: 100vh;
  box-sizing: border-box;
  padding: 32rpx 48rpx 200rpx;
}

.summary {
  padding: 36rpx 32rpx;
  margin-bottom: 36rpx;
}

.summary-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--color-text);
}

.summary-sub {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: var(--color-subtle);
}

.purchase-cards {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.purchase-card {
  padding: 36rpx 32rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
}

.product {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
}

.amount {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--color-primary-dark);
}

.card-body .row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: var(--color-subtle);
}

.card-body .row:last-child {
  margin-bottom: 0;
}

.card-body .label {
  width: 160rpx;
  color: rgba(31, 31, 31, 0.55);
}

.card-body .value {
  flex: 1;
  text-align: right;
  color: var(--color-text);
}
