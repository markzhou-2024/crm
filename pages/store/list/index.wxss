.store-list {
  padding-bottom: 160rpx;
}

.store-list .page-scroll {
  height: 100vh;
  box-sizing: border-box;
  padding: 32rpx 48rpx 200rpx;
}

.filter {
  padding: 36rpx 32rpx;
  margin-bottom: 36rpx;
}

.filter-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--color-text);
}

.filter-sub {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: var(--color-subtle);
}

.store-cards {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.store-card {
  padding: 36rpx 32rpx;
}

.store-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.store-name {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--color-text);
}

.store-row {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: var(--color-subtle);
}

.store-row:last-child {
  margin-bottom: 0;
}

.store-row .label {
  width: 100rpx;
  color: rgba(31, 31, 31, 0.5);
}

.store-row .value {
  flex: 1;
  color: var(--color-text);
}
