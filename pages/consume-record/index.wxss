@import "../../styles/theme.wxss";

.consume-record-page {
  padding: 32rpx 24rpx 40rpx;
  box-sizing: border-box;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.record-card,
.skeleton-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx 28rpx;
  box-shadow: var(--shadow-card);
}

.record-card {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-store {
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
}

.record-amount {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--gold);
}

.record-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.record-service {
  font-size: 26rpx;
  color: #555;
}

.record-service-sub {
  font-size: 24rpx;
  color: #b0a58b;
}

.loading-more,
.no-more {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 0;
}

.skeleton-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.skeleton-card {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.skeleton-line {
  height: 28rpx;
  background: #f2f2f2;
  border-radius: 16rpx;
  position: relative;
  overflow: hidden;
}

.skeleton-title {
  width: 60%;
}

.skeleton-meta {
  width: 40%;
}

.skeleton-line::after {
  content: "";
  position: absolute;
  left: -100%;
  top: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.6) 50%, rgba(255, 255, 255, 0) 100%);
  animation: skeleton-loading 1.2s infinite;
}

@keyframes skeleton-loading {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

.empty-state {
  padding: 160rpx 24rpx;
  text-align: center;
  color: #9a9a9a;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  margin: 0 auto 24rpx;
  background: rgba(205, 164, 106, 0.12);
  border-radius: 50%;
  font-size: 48rpx;
  color: var(--gold);
}

.empty-text {
  font-size: 26rpx;
}
